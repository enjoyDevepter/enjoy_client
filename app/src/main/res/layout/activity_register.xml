<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@mipmap/login_logo_bg">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="47dp"
            android:gravity="center">

            <View
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:background="@mipmap/back" />

        </LinearLayout>

        <View
            android:layout_width="70dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:background="@mipmap/logo_title"
            app:layout_auto_baseheight="width" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="17dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/user" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:background="@android:color/transparent"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="9dp"
            android:background="#FFCCCCCC" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/validate" />

            <EditText
                android:id="@+id/validate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/get_validate"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#FF50C8F5"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="9dp"
            android:background="#FFCCCCCC" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="17dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:background="@android:color/transparent"
                android:hint="请输入密码"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="9dp"
            android:background="#FFCCCCCC" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/project_title"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@id/project_title"
                android:background="@drawable/register_choice_bg"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/drop_down_icon"
                android:gravity="center"
                android:padding="3dp"
                android:text="请选择"
                android:textColor="#FF9A9A9A"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:background="@android:color/transparent"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="9dp"
            android:background="#FFCCCCCC" />

    </LinearLayout>


    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="注册"
        android:textColor="#FFFFFFFF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="同意《Hi美会员实用协议》"
        android:textColor="#FF5FBFE3"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="已注册过,登录"
        android:textColor="#FF5FBFE3"
        android:textSize="13sp" />

</LinearLayout>