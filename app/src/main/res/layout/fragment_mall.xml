<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="127dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

    </android.support.v4.widget.SwipeRefreshLayout>


    <LinearLayout
        android:id="@+id/no_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="92dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="94dp"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:background="@mipmap/nodata" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="暂无数据"
            android:textColor="#FF666666"
            android:textSize="13sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="127dp"
        android:orientation="vertical">

        <View
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88888888"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/secondCategory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFF0F0F0" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/thirdCategory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/title_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/message"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/message" />

            <TextView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/search_input_bg"
                android:drawableLeft="@mipmap/search"
                android:paddingLeft="8dp"
                android:textSize="13sp" />

            <View
                android:id="@+id/cart"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/cart" />
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            app:tabGravity="fill"
            app:tabIndicatorColor="#FF50C8F5"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="15dp"
            app:tabPaddingStart="15dp"
            app:tabSelectedTextColor="#FF50C8F5"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="#FF666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/title_bg"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/type_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="全部商品"
                    android:textColor="#FF333333"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/type_status"
                    android:layout_width="7dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="销量"
                    android:textColor="#FF333333"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/sale_status"
                    android:layout_width="7dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/arrow_down" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="价格"
                    android:textColor="#FF333333"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/price_status"
                    android:layout_width="7dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/arrow_down" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>

