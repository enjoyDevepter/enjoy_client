<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:id="@+id/success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/pay_success"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/pay_img"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="26dp"
                    android:background="@mipmap/success" />

                <TextView
                    android:id="@+id/pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="支付成功"
                    android:textColor="#FF333333"
                    android:textSize="17sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_center"
                        android:layout_width="102dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/order_bg"
                        android:gravity="center"
                        android:text="订单中心"
                        android:textColor="#FFFFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/order_detail"
                        android:layout_width="102dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/order_bg"
                        android:gravity="center"
                        android:text="订单详情"
                        android:textColor="#FFFFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/charge_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/charge_pay_img"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="26dp"
                    android:background="@mipmap/recharge_wait" />

                <TextView
                    android:id="@+id/charge_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="支付成功，等待后台确认"
                    android:textColor="#FF333333"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/charge_order_detail"
                    android:layout_width="102dp"
                    android:layout_height="27dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/order_bg"
                    android:gravity="center"
                    android:text="订单详情"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/pay_result_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式："
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/pay_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额："
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单时间："
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>