<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="212dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/list_item_butom_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="时间：2018-07-04"
            android:textColor="#FF666666"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="待付款"
            android:textColor="#FF666666"
            android:textSize="13sp" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_item_top_bg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/pay"
            android:layout_width="54dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/order_btn_bg"
            android:gravity="center"
            android:text="支付"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/logistics"
            android:layout_width="76dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/order_btn_bg"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/take_over"
            android:layout_width="76dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/logistics"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/logistics"
            android:background="@drawable/order_btn_bg"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/image"
        android:lines="2"
        android:text="湘人龙记老长沙米 粉，湘人龙记，一 家隐藏在东三环..."
        android:textColor="#FF000000"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_alignLeft="@id/name"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/image"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:text="￥"
                android:textColor="#FFFF0000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/price_tag"
                android:text="228.00"
                android:textColor="#FFFF0000"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="数量：x1"
            android:textColor="#FF666666"
            android:textSize="13sp" />
    </LinearLayout>


</RelativeLayout>

