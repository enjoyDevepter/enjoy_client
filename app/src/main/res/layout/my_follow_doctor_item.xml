<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bg"
    android:paddingBottom="14dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="14dp">

    <me.jessyan.mvparms.demo.mvp.ui.widget.ShapeImageView
        android:id="@+id/headImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/place_holder_user" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/headImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/headImage"
        android:text="刘能"
        android:textColor="#FF676767"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="6dp"
        android:text="北京华泰医疗美容医院"
        android:textColor="#FF666666"
        android:textSize="13sp" />

    <View
        android:id="@+id/fllow"
        android:layout_width="44dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@id/hospital"
        android:layout_below="@id/hospital"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/hospital"
        android:background="@drawable/follow_bg" />

</RelativeLayout>

