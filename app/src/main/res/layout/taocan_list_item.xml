<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@drawable/list_item_bg"
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/image"
        android:lines="2"
        android:text="湘人龙记老长沙米 粉，湘人龙记，一 家隐藏在东三环..."
        android:textColor="#FF000000"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/salesPrice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/salesPrice_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="￥"
            android:textColor="#FFFF0000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/salesPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="228.00"
            android:textColor="#FFFF0000"
            android:textSize="17sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="已售:"
            android:textColor="#FF666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="4"
            android:textColor="#FF666666"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/totalPrice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/salesPrice_layout"
        android:layout_below="@id/salesPrice_layout"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="￥"
            android:textColor="#FF666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="228.00"
            android:textColor="#FF666666"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/buy"
        android:layout_width="86dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@id/totalPrice_layout"
        android:layout_below="@id/totalPrice_layout"
        android:background="@drawable/goods_list_item_btn_bg"
        android:gravity="center"
        android:text="立即购物"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp" />

</RelativeLayout>

