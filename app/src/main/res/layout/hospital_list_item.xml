<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/list_item_bg">

    <me.jessyan.mvparms.demo.mvp.ui.widget.ShapeImageView
        android:id="@+id/image"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/image"
        android:textColor="#FF000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/distance_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="8dp"
        android:text="距离："
        android:textColor="#FF666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/distance_tag"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/distance_tag"
        android:textColor="#FF666666"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/distance_tag"
        android:layout_below="@id/distance_tag"
        android:layout_marginTop="8dp"
        android:textColor="#FF666666"
        android:textSize="12sp" />

</RelativeLayout>

