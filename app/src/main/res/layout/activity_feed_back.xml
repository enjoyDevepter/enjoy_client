<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <include layout="@layout/title"/>
    
    <View style="@style/divider_3"/>
    
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="190dp">

        <EditText
            android:maxLength="140"
            android:padding="10dp"
            android:gravity="left|top"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:background="@drawable/add_bank_card_edit_back" />



        <TextView
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/140"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/et_name"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/text_count"
            android:layout_toLeftOf="@id/bottom"
            android:layout_alignBottom="@id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/add_address_btn_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="13sp" />
</LinearLayout>